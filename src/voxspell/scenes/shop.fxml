<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="900.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="voxspell.scenes.controllers.ShopController">
    <children>
        <Label style="-fx-font-size: 48px;" styleClass="mainTitle" text="Shop" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
                      style="-fx-background-color: rgba(255,255,255,0.7);">
                    <children>
                        <Label text="Your coins:">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <padding>
                                <Insets right="20.0"/>
                            </padding>
                        </Label>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@assets/goldCoin.png"/>
                            </image>
                            <HBox.margin>
                                <Insets left="50.0"/>
                            </HBox.margin>
                        </ImageView>
                        <Label fx:id="goldLabel" text="Label">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@assets/silverCoin.png"/>
                            </image>
                        </ImageView>
                        <Label fx:id="silverLabel" text="Label">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@assets/bronzeCoin.png"/>
                            </image>
                        </ImageView>
                        <Label fx:id="bronzeLabel" text="Label">
                            <HBox.margin>
                                <Insets right="100.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="shopBox" prefHeight="268.0" prefWidth="900.0" spacing="10.0">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets left="20.0" right="20.0"/>
                    </padding>
                </HBox>
                <Label text="... and more coming soon!">
                    <VBox.margin>
                        <Insets bottom="20.0" right="10.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="62.0" prefWidth="900.0">
            <children>
                <Button fx:id="mainMenuButton" mnemonicParsing="false" prefHeight="62.0" prefWidth="128.0"
                        style="-fx-background-color: b6e7c9;" text="Go Back">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="50.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
